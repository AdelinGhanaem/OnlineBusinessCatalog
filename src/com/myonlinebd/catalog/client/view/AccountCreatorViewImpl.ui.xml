<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b='urn:import:com.google.gwt.user.client.ui'>

    <b:DecoratorPanel>
        <b:VerticalPanel>
            <b:VerticalPanel>
                <b:Label>e-mail:</b:Label>
                <b:TextBox ui:field="email"></b:TextBox>
                <b:Label ui:field="email_error"></b:Label>
            </b:VerticalPanel>
            <b:VerticalPanel>
                <b:Label>парола:</b:Label>
                <b:PasswordTextBox ui:field="password"></b:PasswordTextBox>

                <b:Label ui:field="password_error"></b:Label>
            </b:VerticalPanel>
            <b:VerticalPanel>
                <b:Button ui:field="submit" text="Създай"></b:Button>
            </b:VerticalPanel>
        </b:VerticalPanel>
    </b:DecoratorPanel>


</ui:UiBinder>